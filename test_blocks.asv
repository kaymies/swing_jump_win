
clear all; close all; clc;
dths = 10; %shoulder angular velocity
thsi = -pi/2; %Initial shoulder angle
thsf = 3*pi/4; %Final shoulder angle
tis = 1.4;

ramp = @(t) t*heaviside(t);
tfs = (thsf - thsi)/dths;
thsfun = @(t) dths * (ramp(t - tis) - ramp(t - tfs)) + thsi;
dthsfun = @(t) dths * (heaviside(t - tis) - heaviside(t - tfs));


figure
yyaxis left
fplot(@(t) thsfun(t))
yyaxis right
fplot(dthsfun)